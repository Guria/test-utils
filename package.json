{
  "name": "rebem-test-utils",
  "version": "0.2.0",
  "description": "reBEM addons for React Test Utilities",
  "keywords": [ "rebem", "react", "test-utils", "tests" ],
  "homepage": "https://github.com/rebem/test-utils",
  "repository": "rebem/test-utils",
  "contributors": [
    "Kir Belevich <kir@soulshine.in> (https://github.com/deepsweet)",
    "Denis Koltsov <iam@mistadikay.com> (https://github.com/mistadikay)"
  ],
  "main": "build/index.js",
  "files": [ "build/" ],
  "dependencies": {
    "react": "0.14.x",
    "rebem": "0.4.x",
    "react-addons-test-utils": "0.14.x"
  },
  "devDependencies": {
    "husky": "0.10.x",
    "rimraf": "2.5.x",

    "babel-cli": "6.4.x",
    "babel-core": "6.4.x",
    "babel-preset-es2015": "6.3.x",
    "babel-preset-stage-2": "6.3.x",
    "babel-plugin-add-module-exports": "0.1.x",

    "eslint": "1.10.x",
    "babel-eslint": ">5.0.0-beta1",
    "eslint-plugin-babel": "3.0.x",
    "eslint-config-rebem": "0.2.x",

    "jsdom": "8.0.x",
    "mocha": "2.4.x",
    "babel-istanbul": "0.6.x",
    "codecov": "1.0.x",
    "chokidar-cli": "1.2.x"
  },
  "scripts": {
    "prebuild": "rimraf build/",
    "build": "babel lib/ -d build/",
    "dev": "npm run build -- -w",

    "lint": "eslint .",
    "mocha": "mocha --compilers js:babel-register --recursive",
    "tdd": "chokidar lib/*.js test/lib/*.js -c 'npm run mocha' --initial",
    "pretest": "npm run lint",
    "test": "npm run mocha",
    "precoverage": "rimraf coverage/",
    "coverage": "babel-node node_modules/.bin/babel-istanbul cover _mocha -- --recursive",

    "precodecov": "npm run coverage",
    "codecov": "codecov --file=coverage/lcov.info --disable=search,gcov",
    "pretravis": "npm run lint",
    "travis": "npm run codecov",

    "prepush": "npm test",
    "prepublish": "npm run build"
  },
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=2.7.0"
  },
  "license": "MIT"
}
